<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">

    <changeSet id="create-table-stoplists" author="Yuriy Gorelov">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="stoplists"/>
            </not>
        </preConditions>

        <createTable tableName="stoplists" remarks="Стоп листы">
            <column name="id" type="UUID" remarks="Идентификатор блокированного клиента">
                <constraints primaryKey="true" primaryKeyName="pk_stoplist"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>